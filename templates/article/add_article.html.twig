{% extends 'base.html.twig' %}

{% block title %}Article ajout
{% endblock %}

{% block importmap %}{% endblock %}

{% block body %}
	<div class="relative bg-neutral-50 shadow-sm shadow-gray-400 mb-10 rounded-md">
		<div class="bg-gradient-to-r from-amber-50 via-amber-100 to-amber-50 absolute inset-0 h-36 opacity-90 lg:h-56" width='100' height='10'></div>
		<div class="relative mx-auto max-w-7xl px-6 pt-16 pb-12 sm:px-12 lg:pt-24">
			<header class="mx-auto max-w-2xl text-center">
				<h3 class="text-2xl text-orange-900 font-extrabold tracking-tight sm:text-2xl">Bonjour
					{{ app.user.pseudo }}</h3>

				<p class="mt-2 text-md font-semibold text-cyan-600" id="message">
					Saisissez votre nouvel article
				</p>
			</header>
		</div>
		{{ form_start(form_article_new, {attr: {
              class: "bg-white md:col-span-2 w-full py-6 px-6 sm:px-16",
              id: "add_article_form"
            }
          })}}

		<div class="space-y-6 ">
			<div>
				{{ form_label(form_article_new.title) }}
				<div class="relative flex items-center">
					{{ form_widget(form_article_new.title) }}
					<div class="text-sm text-red-700">
						{{ form_errors(form_article_new.title) }}
					</div>
				</div>
			</div>
			<div>
				{{ form_label(form_article_new.content) }}
				<div class="relative flex items-center">
					{{ form_widget(form_article_new.content) }}
					<div class="text-sm text-red-700">
						{{ form_errors(form_article_new.content) }}
					</div>
				</div>
			</div>
			<div>
				{{ form_label(form_article_new.photo) }}
				<div class="relative flex items-center">
					{{ form_widget(form_article_new.photo) }}
					<div class="text-sm text-red-700">
						{{ form_errors(form_article_new.photo) }}
					</div>
				</div>
			</div>

			<div
				class="flex items-center mb-1"><!--- publisher or not -->
			</div>
		</div>


		<div class="flex justify-end !mt-2">
			<button type="submit" class="px-6 py-2 btn-azur">Enregister</button>
		</div>


		{{ form_end(form_article_new)}}
	</div>


{% endblock %}
